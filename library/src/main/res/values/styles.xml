<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Dialog.Bottom" parent="Dialog">
        <item name="android:windowAnimationStyle">@style/bottom_dialog_animation</item>
    </style>
    <style name="bottom_dialog_animation" parent="android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <declare-styleable name="ColorDetailView">
        <attr name="detailColor" format="color"/>
    </declare-styleable>
</resources>